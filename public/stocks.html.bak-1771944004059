    <script>
        // ============================================================
        // STATE
        // ============================================================
        let watchlist = [];
        let currentCode = null;
        let dailyChart = null;

        // ============================================================
        // INIT: ÏõåÏπòÎ¶¨Ïä§Ìä∏ Î°úÎìú
        // ============================================================
        async function init() {
            try {
                const resp = await fetch('/api/stocks/watchlist');
                watchlist = await resp.json();
            } catch (e) {
                // fallback: /api/stocks
                try {
                    const resp = await fetch('/api/stocks');
                    const data = await resp.json();
                    watchlist = data.map ? data : (data.stocks || []);
                } catch (e2) {
                    watchlist = [];
                }
            }
            renderStockBar();
        }

        // ============================================================
        // STOCK BAR (Ï¢ÖÎ™© ÏÑ†ÌÉù Ïπ©)
        // ============================================================
        function renderStockBar() {
            const bar = document.getElementById('stockBar');
            if (watchlist.length === 0) {
                bar.innerHTML = '<div class="empty">ÏõåÏπòÎ¶¨Ïä§Ìä∏Í∞Ä ÎπÑÏñ¥ÏûàÏäµÎãàÎã§</div>';
                return;
            }

            bar.innerHTML = watchlist.map(s => {
                const changePct = s.changePct || s.change_pct;
                const isUp = changePct >= 0;
                const priceStr = s.price ? Number(s.price).toLocaleString() : '';
                const changeStr = changePct != null ? `${isUp ? '+' : ''}${Number(changePct).toFixed(1)}%` : '';
                return `
          <button class="stock-chip ${s.code === currentCode ? 'active' : ''}"
                  onclick="selectStock('${s.code}', '${s.name}')"
                  data-code="${s.code}">
            ${s.name}
            ${priceStr ? `<span class="price-tag ${isUp ? 'up' : 'dn'}">${priceStr} ${changeStr}</span>` : ''}
          </button>`;
            }).join('') + `
        <button class="manage-btn" onclick="openManagePanel()">‚öôÔ∏è Í¥ÄÎ¶¨</button>
      `;
        }

        // ============================================================
        // SELECT STOCK ‚Üí Îç∞Ïù¥ÌÑ∞ Î°úÎìú
        // ============================================================
        async function selectStock(code, name) {
            currentCode = code;
            // Ïπ© ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏
            document.querySelectorAll('.stock-chip').forEach(c => {
                c.classList.toggle('active', c.dataset.code === code);
            });

            const content = document.getElementById('contentArea');
            const side = document.getElementById('sidePanel');
            content.innerHTML = '<div class="loading"><span class="spinner"></span>Îç∞Ïù¥ÌÑ∞ Î°úÎî©Ï§ë...</div>';
            side.innerHTML = '<div class="loading"><span class="spinner"></span></div>';

            try {
                // Î≥ëÎ†¨Î°ú Í∏∞ÏóÖ Îç∞Ïù¥ÌÑ∞ÏôÄ Ï£ºÍ∞Ä Îç∞Ïù¥ÌÑ∞ Ï°∞Ìöå
                const [priceResp, layersResp] = await Promise.all([
                    fetch(`/api/stocks/company/${code}/price`),
                    fetch(`/api/stocks/company/${code}/layers`)
                ]);

                const priceData = priceResp.ok ? await priceResp.json() : { current: null, daily: [] };
                const layersData = layersResp.ok ? await layersResp.json() : {};

                renderContent(code, name, priceData, layersData);
                renderSidePanel(code, name, priceData, layersData);
            } catch (e) {
                content.innerHTML = `<div class="empty">‚ö†Ô∏è Îç∞Ïù¥ÌÑ∞ Î°úÎìú Ïã§Ìå®: ${e.message}</div>`;
            }
        }

        // ============================================================
        // RENDER CONTENT (Ï∞®Ìä∏ + Îâ¥Ïä§ + Î¶¨Ìè¨Ìä∏)
        // ============================================================
        function renderContent(code, name, priceData, layersData) {
            const content = document.getElementById('contentArea');
            const current = priceData.current || {};
            const daily = priceData.daily || [];
            const news = layersData['Îâ¥Ïä§'] || [];
            const reports = layersData['Î¶¨Ìè¨Ìä∏'] || [];

            const isUp = (current.change || 0) >= 0;
            const changeColor = isUp ? 'var(--up)' : 'var(--down)';
            const arrow = isUp ? '‚ñ≤' : '‚ñº';

            content.innerHTML = `
        <!-- PRICE HERO -->
        <div class="card">
          <div class="price-hero">
            <span class="price-main" style="color:${changeColor}">
              ${current.price ? Number(current.price).toLocaleString() : '--'}
            </span>
            <span class="price-change" style="color:${changeColor}">
              ${current.change ? `${arrow} ${Math.abs(current.change).toLocaleString()}` : ''}
              ${current.change != null ? `(${isUp ? '+' : ''}${current.change}%)` : ''}
            </span>
            <span style="font-size:14px;color:var(--muted);font-family:'JetBrains Mono',monospace;">${name}</span>
            <span style="font-size:11px;color:#555;font-family:'JetBrains Mono',monospace;">${code}</span>
          </div>
          <div class="price-meta">
            <span><span class="label">ÏãúÍ∞Ä</span>${current.open ? Number(current.open).toLocaleString() : '--'}</span>
            <span><span class="label">Í≥†Í∞Ä</span>${current.high ? Number(current.high).toLocaleString() : '--'}</span>
            <span><span class="label">Ï†ÄÍ∞Ä</span>${current.low ? Number(current.low).toLocaleString() : '--'}</span>
            <span><span class="label">Í±∞ÎûòÎüâ</span>${current.volume ? Number(current.volume).toLocaleString() : '--'}</span>
          </div>
        </div>

        <!-- DAILY CHART (E2) -->
        <div class="card">
          <div class="card-header">
            <span class="card-title">üìä ÏùºÎ¥â Ï∞®Ìä∏ (${daily.length}Ïùº)</span>
            <span style="font-size:9px;color:var(--muted);">${priceData.dailyUpdatedAt ? 'Í∞±Ïã†: ' + new Date(priceData.dailyUpdatedAt).toLocaleDateString('ko-KR') : ''}</span>
          </div>
          <div class="chart-container">
            <canvas id="dailyCanvas"></canvas>
          </div>
        </div>

        <!-- NEWS -->
        <div class="card">
          <div class="card-header">
            <span class="card-title">üì∞ Í¥ÄÎ†® Îâ¥Ïä§ (${news.length})</span>
          </div>
          ${news.length === 0 ? '<div class="empty">Í¥ÄÎ†® Îâ¥Ïä§ ÏóÜÏùå</div>' :
                    news.slice(-15).reverse().map(n => `
              <div class="list-item">
                <div class="item-title">
                  ${n.cls ? `<span class="item-tag tag-${n.cls}">${n.cls}</span>` : ''}
                  ${n.importance ? `<span class="item-tag tag-${n.importance}">${n.importance}</span>` : ''}
                  ${n.link ? `<a href="${n.link}" target="_blank" class="item-link">${n.title}</a>` : n.title}
                </div>
                <div class="item-meta">
                  ${n.category ? `<span>${n.category}</span>` : ''}
                  ${n.date ? `<span>${new Date(n.date).toLocaleDateString('ko-KR')}</span>` : ''}
                  ${n.summary ? `<span style="color:var(--text)">${n.summary}</span>` : ''}
                </div>
              </div>
            `).join('')}
        </div>

        <!-- REPORTS -->
        <div class="card">
          <div class="card-header">
            <span class="card-title">üìë Î¶¨Ìè¨Ìä∏ (${reports.length})</span>
          </div>
          ${reports.length === 0 ? '<div class="empty">Í¥ÄÎ†® Î¶¨Ìè¨Ìä∏ ÏóÜÏùå</div>' :
                    reports.slice(-10).reverse().map(r => `
              <div class="list-item">
                <div class="item-title">
                  ${r.link ? `<a href="${r.link}" target="_blank" class="item-link">${r.title || r.report_nm || 'Î¶¨Ìè¨Ìä∏'}</a>` : (r.title || r.report_nm || 'Î¶¨Ìè¨Ìä∏')}
                </div>
                <div class="item-meta">
                  ${r.source ? `<span>${r.source}</span>` : ''}
                  ${r.date ? `<span>${r.date}</span>` : ''}
                  ${r.target_price ? `<span>TP: ${Number(r.target_price).toLocaleString()}</span>` : ''}
                </div>
              </div>
            `).join('')}
        </div>
      `;

            // chart.js ÏùºÎ¥â Ï∞®Ìä∏ Î†åÎçî (E2)
            if (daily.length > 0) {
                renderDailyChart(daily);
            }
        }

        // ============================================================
        // E2: Chart.js ÏùºÎ¥â Ï∞®Ìä∏
        // ============================================================
        function renderDailyChart(daily) {
            const ctx = document.getElementById('dailyCanvas').getContext('2d');
            if (dailyChart) dailyChart.destroy();

            // Î¥â ÏÉâÏÉÅ Í≤∞Ï†ï
            const labels = daily.map(d => d.date || d.stck_bsop_date || '');
            const closes = daily.map(d => Number(d.close || d.stck_clpr || 0));
            const opens = daily.map(d => Number(d.open || d.stck_oprc || 0));
            const highs = daily.map(d => Number(d.high || d.stck_hgpr || 0));
            const lows = daily.map(d => Number(d.low || d.stck_lwpr || 0));
            const volumes = daily.map(d => Number(d.volume || d.acml_vol || 0));
            const colors = daily.map(d => {
                const c = Number(d.close || d.stck_clpr || 0);
                const o = Number(d.open || d.stck_oprc || 0);
                return c >= o ? '#26a69a' : '#ef5350';
            });

            // Ïù¥ÎèôÌèâÍ∑†ÏÑ† (5Ïùº, 20Ïùº)
            function ma(data, period) {
                return data.map((_, i) => {
                    if (i < period - 1) return null;
                    const slice = data.slice(i - period + 1, i + 1);
                    return slice.reduce((a, b) => a + b, 0) / period;
                });
            }

            const ma5 = ma(closes, 5);
            const ma20 = ma(closes, 20);

            dailyChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels,
                    datasets: [
                        {
                            label: 'Ï¢ÖÍ∞Ä',
                            type: 'line',
                            data: closes,
                            borderColor: '#e6edf3',
                            borderWidth: 1.5,
                            pointRadius: 0,
                            fill: false,
                            yAxisID: 'y',
                            order: 1
                        },
                        {
                            label: 'MA5',
                            type: 'line',
                            data: ma5,
                            borderColor: '#f0c040',
                            borderWidth: 1,
                            borderDash: [4, 2],
                            pointRadius: 0,
                            fill: false,
                            yAxisID: 'y',
                            order: 2
                        },
                        {
                            label: 'MA20',
                            type: 'line',
                            data: ma20,
                            borderColor: '#00d4aa',
                            borderWidth: 1,
                            borderDash: [4, 2],
                            pointRadius: 0,
                            fill: false,
                            yAxisID: 'y',
                            order: 3
                        },
                        {
                            label: 'Í±∞ÎûòÎüâ',
                            data: volumes,
                            backgroundColor: colors.map(c => c + '44'),
                            borderColor: colors,
                            borderWidth: 1,
                            yAxisID: 'y1',
                            order: 4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: { display: true, position: 'top', labels: { color: '#7d8590', font: { size: 9, family: "'JetBrains Mono'" }, boxWidth: 10, padding: 10 } },
                        tooltip: {
                            backgroundColor: '#0d1117',
                            borderColor: '#1c2333',
                            borderWidth: 1,
                            titleFont: { family: "'JetBrains Mono'", size: 10 },
                            bodyFont: { family: "'JetBrains Mono'", size: 10 },
                            callbacks: {
                                label: function (ctx) {
                                    if (ctx.dataset.yAxisID === 'y1') return `Í±∞ÎûòÎüâ: ${Number(ctx.raw).toLocaleString()}`;
                                    return `${ctx.dataset.label}: ${Number(ctx.raw).toLocaleString()}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: { ticks: { color: '#555', font: { size: 8, family: "'JetBrains Mono'" }, maxRotation: 45 }, grid: { color: '#111' } },
                        y: { position: 'left', ticks: { color: '#7d8590', font: { size: 9, family: "'JetBrains Mono'" }, callback: v => v.toLocaleString() }, grid: { color: '#0f1520' } },
                        y1: { position: 'right', ticks: { color: '#555', font: { size: 8 }, callback: v => (v / 1000).toFixed(0) + 'K' }, grid: { display: false } }
                    }
                }
            });
        }

        // ============================================================
        // SIDE PANEL (AIÎ∂ÑÏÑù + Î†àÏù¥Ïñ¥ + Î©îÎ™®)
        // ============================================================
        function renderSidePanel(code, name, priceData, layersData) {
            const side = document.getElementById('sidePanel');
            const ai = layersData['AIÎ∂ÑÏÑù'] || {};
            const basicInfo = layersData['Í∏∞Î≥∏Ï†ïÎ≥¥'] || {};
            const memo = layersData['Î©îÎ™®'] || {};
            const disclosures = layersData['Í≥µÏãú'] || [];

            // ÏÑºÌã∞Î®ºÌä∏ ÏÉâÏÉÅ
            let sentColor = 'var(--muted)', sentBg = 'rgba(125,133,144,0.15)';
            if (ai.sentiment === 'Í∏çÏ†ï' || ai.sentiment === 'positive') { sentColor = 'var(--up)'; sentBg = 'rgba(38,166,154,0.15)'; }
            if (ai.sentiment === 'Î∂ÄÏ†ï' || ai.sentiment === 'negative') { sentColor = 'var(--down)'; sentBg = 'rgba(239,83,80,0.15)'; }

            // Í∏âÎì±ÎùΩ Î∂ÑÏÑù Î≤ÑÌäº Ïä§ÌÉÄÏùº Í≤∞Ï†ï
            const changePct = priceData?.current?.change || 0;
            const absChange = Math.abs(changePct);
            let spikeClass = '';  // Í∏∞Î≥∏: Ï§ëÎ¶Ω Ïä§ÌÉÄÏùº
            let spikeLabel = 'üîç Í∏âÎì±ÎùΩ ÏõêÏù∏ Î∂ÑÏÑù';
            if (changePct >= 3) { spikeClass = 'spike-up'; spikeLabel = `üî• Í∏âÎì± ÏõêÏù∏ Î∂ÑÏÑù (+${changePct}%)`; }
            else if (changePct <= -3) { spikeClass = 'spike-down'; spikeLabel = `üí• Í∏âÎùΩ ÏõêÏù∏ Î∂ÑÏÑù (${changePct}%)`; }

            side.innerHTML = `
        <!-- AI Î∂ÑÏÑù -->
        <div class="side-section">
          <div class="side-header">ü§ñ AI ANALYSIS</div>
          <div class="side-content">
            ${ai.sentiment ? `<span class="sentiment-badge" style="color:${sentColor};background:${sentBg}">${ai.sentiment}</span>` : ''}
            <div class="ai-summary">${ai.latestSummary || 'ÏïÑÏßÅ AI Î∂ÑÏÑù ÏóÜÏùå'}</div>
            ${ai.updatedAt ? `<div style="margin-top:6px;font-size:9px;color:#555;">Í∞±Ïã†: ${new Date(ai.updatedAt).toLocaleDateString('ko-KR')}</div>` : ''}
          </div>
        </div>

        <!-- Í∏âÎì±ÎùΩ Î∂ÑÏÑù -->
        <div class="side-section">
          <div class="side-header">üìà SPIKE ANALYSIS</div>
          <div class="side-content">
            <button class="spike-btn ${spikeClass}" id="spikeBtn"
                    onclick="analyzeSpike('${code}', '${name}', ${changePct})">
              ${spikeLabel}
            </button>
            <div id="spikeResult"></div>
          </div>
        </div>

        <!-- Í∏∞Î≥∏ Ï†ïÎ≥¥ -->
        <div class="side-section">
          <div class="side-header">üìã INFO</div>
          <div class="side-content" style="font-size:11px;color:var(--muted);font-family:'JetBrains Mono',monospace;">
            <div>ÏΩîÎìú: ${code}</div>
            <div>Ïù¥Î¶Ñ: ${name}</div>
            ${basicInfo.sector ? `<div>ÏÑπÌÑ∞: ${basicInfo.sector}</div>` : ''}
          </div>
        </div>

        <!-- ÏµúÍ∑º Í≥µÏãú -->
        <div class="side-section">
          <div class="side-header">üìÑ Í≥µÏãú (${disclosures.length})</div>
          ${disclosures.length === 0 ? '<div class="empty">Í≥µÏãú ÏóÜÏùå</div>' :
                    disclosures.slice(-8).reverse().map(d => `
              <div class="list-item" style="padding:6px 14px;">
                <div style="font-size:11px;">${d.report_nm || d.title || 'Í≥µÏãú'}</div>
                <div style="font-size:9px;color:#555;margin-top:2px;">${d.rcept_dt || d.date || ''}</div>
              </div>
            `).join('')}
        </div>

        <!-- Î©îÎ™® -->
        <div class="side-section">
          <div class="side-header">üìù MEMO</div>
          <div class="side-content">
            <textarea id="memoInput" rows="4" style="
              width:100%;background:#0a0e17;border:1px solid var(--border);border-radius:4px;
              color:var(--text);font-size:11px;padding:8px;resize:vertical;outline:none;
              font-family:'Noto Sans KR',sans-serif;
            " placeholder="Ï¢ÖÎ™© Î©îÎ™®Î•º ÏûÖÎ†•ÌïòÏÑ∏Ïöî...">${memo.notes || ''}</textarea>
            <div style="display:flex;gap:6px;margin-top:6px;">
              <button onclick="saveMemo('${code}')" style="
                flex:1;padding:6px;background:rgba(0,212,170,0.1);border:1px solid rgba(0,212,170,0.3);
                border-radius:4px;color:var(--accent);font-size:10px;cursor:pointer;
                font-family:'JetBrains Mono',monospace;
              ">üíæ Ï†ÄÏû•</button>
            </div>
          </div>
        </div>
      `;
        }

        // ============================================================
        // Í∏âÎì±ÎùΩ Î∂ÑÏÑù Ìò∏Ï∂ú
        // ============================================================
        async function analyzeSpike(code, name, changePercent) {
            const btn = document.getElementById('spikeBtn');
            const resultDiv = document.getElementById('spikeResult');
            btn.disabled = true;
            btn.textContent = '‚è≥ Gemini Î∂ÑÏÑù Ï§ë...';
            resultDiv.innerHTML = '';

            try {
                const resp = await fetch('/api/analyze-spike', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code, name, changePercent })
                });
                const data = await resp.json();

                if (!resp.ok || !data.ok) {
                    resultDiv.innerHTML = `<div class="spike-result" style="color:var(--down);">
                        ‚ö†Ô∏è ${data.error || 'Î∂ÑÏÑù Ïã§Ìå®'}</div>`;
                    return;
                }

                // Î∂ÑÏÑù Í≤∞Í≥º ÌëúÏãú
                const a = data.analysis || {};
                // Ïã†Î¢∞ÎèÑ ÏÉâÏÉÅ
                let confColor = 'var(--muted)';
                if (a.confidence === 'ÏÉÅ') confColor = 'var(--up)';
                else if (a.confidence === 'Ìïò') confColor = 'var(--down)';
                else if (a.confidence === 'Ï§ë') confColor = '#f0c040';

                resultDiv.innerHTML = `
                    <div class="spike-result">
                        <div class="spike-label">CAUSE / ÏõêÏù∏</div>
                        <div class="spike-value">${a.cause || 'Î∂ÑÏÑù Î∂àÍ∞Ä'}</div>
                        <div class="spike-label">OUTLOOK / Ï†ÑÎßù</div>
                        <div class="spike-value">${a.outlook || '-'}</div>
                        <div class="spike-label">RELATED / Í¥ÄÎ†®Ï¢ÖÎ™©</div>
                        <div class="spike-value">${a.relatedStocks || '-'}</div>
                        <div class="spike-label">CONFIDENCE / Ïã†Î¢∞ÎèÑ</div>
                        <div class="spike-value" style="color:${confColor};">${a.confidence || '-'}</div>
                        <div style="margin-top:6px;font-size:9px;color:#555;">Î∂ÑÏÑù: ${a.analyzedAt ? new Date(a.analyzedAt).toLocaleString('ko-KR') : 'now'}</div>
                    </div>`;
            } catch (e) {
                resultDiv.innerHTML = `<div class="spike-result" style="color:var(--down);">‚ö†Ô∏è Ïò§Î•ò: ${e.message}</div>`;
            } finally {
                btn.disabled = false;
                btn.textContent = 'üîç Í∏âÎì±ÎùΩ ÏõêÏù∏ Î∂ÑÏÑù';
            }
        }

        // ============================================================
        // MEMO SAVE
        // ============================================================
        async function saveMemo(code) {
            const notes = document.getElementById('memoInput').value;
            try {
                await fetch(`/api/stocks/company/${code}/memo`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ notes })
                });
            } catch (e) {
                console.error('Î©îÎ™® Ï†ÄÏû• Ïã§Ìå®:', e);
            }
        }

        // ============================================================
        // E3: MANAGE PANEL (Ï¢ÖÎ™© Ï∂îÍ∞Ä/ÏÇ≠Ï†ú)
        // ============================================================
        function openManagePanel() {
            document.getElementById('manageOverlay').classList.add('visible');
            renderManageList();
        }

        function closeManagePanel() {
            document.getElementById('manageOverlay').classList.remove('visible');
        }

        function renderManageList() {
            const list = document.getElementById('manageList');
            list.innerHTML = watchlist.map(s => `
        <div class="stock-list-item">
          <div class="stock-info">
            <span>${s.name}</span>
            <span class="stock-code">${s.code}</span>
            ${s.sector ? `<span class="stock-sector">${s.sector}</span>` : ''}
          </div>
          <button class="delete-btn" onclick="removeStock('${s.name}')">ÏÇ≠Ï†ú</button>
        </div>
      `).join('');
        }

        async function addStock() {
            const name = document.getElementById('addName').value.trim();
            const code = document.getElementById('addCode').value.trim();
            if (!name || !code) return alert('Ï¢ÖÎ™©Î™ÖÍ≥º ÏΩîÎìúÎ•º Î™®Îëê ÏûÖÎ†•ÌïòÏÑ∏Ïöî');

            try {
                await fetch('/api/stocks/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, code })
                });
                document.getElementById('addName').value = '';
                document.getElementById('addCode').value = '';
                await init();
                renderManageList();
            } catch (e) {
                alert('Ï∂îÍ∞Ä Ïã§Ìå®: ' + e.message);
            }
        }

        async function removeStock(name) {
            if (!confirm(`${name} ÏùÑ(Î•º) ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?`)) return;
            try {
                await fetch('/api/stocks/remove', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name })
                });
                await init();
                renderManageList();
            } catch (e) {
                alert('ÏÇ≠Ï†ú Ïã§Ìå®: ' + e.message);
            }
        }

        // ESC Îã´Í∏∞
        document.addEventListener('keydown', e => {
            if (e.key === 'Escape') closeManagePanel();
        });

        // INIT
        init();
    </script>
